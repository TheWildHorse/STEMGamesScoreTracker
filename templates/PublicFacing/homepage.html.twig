            </svg> Igor Rinkovec.</a>

        </footer>
    </div>

    <script id="placements-template" type="text/x-handlebars-template">
        {% verbatim %}
        <h3><i class="{{ icon }}"></i> {{ name }}</h3>
        {{#each groups}}
        {{#each events}}
        <table class="table table-striped table-bordered table-dark text-center">
            <thead class="thead-light">
            <tr>
                <th colspan="4">
                {{#ifEquals state 2}}
                <i class="fa fa-hourglass-half"></i>
                {{/ifEquals}}
                {{#ifEquals state 3}}
                <i class="fa fa-flag-checkered"></i>
                {{/ifEquals}}
                {{../name}} {{ name }}
                </th>
            </tr>
            </thead>
            <tbody>

            {{#each scores}}
            <tr>
                <th>{{inc @index}}</th>
                <td>{{ team_name }}</td>
                <td>{{ college.name }}</td>
                <td>{{ score }}</td>
            </tr>
            {{else}}
            <tr>
                <td colspan="4">Starts {{dateFormat start_time format="dddd"}} at {{dateFormat start_time format="H:mm"}}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        {{/each}}
        {{/each}}
        {% endverbatim %}
    </script>

    <script id="versus-template" type="text/x-handlebars-template">
        {% verbatim %}
        <h3><i class="{{ icon }}"></i> {{ name }}</h3>
        {{#each groups}}
        <table class="table table-striped table-bordered table-dark text-center">
            <thead class="thead-light">
                <tr>
                    <th colspan="5">{{ name }}</th>
                </tr>
            </thead>
            <tbody>
                {{#each events}}
                <tr>
                    <td>{{competitor1.name}}</td>
                    <td>{{getScore competitor1.id scores}}</td>
                    <td>
                        {{#ifEquals state 1}}
                        {{dateFormat start_time format="dddd H:mm"}}
                        {{/ifEquals}}
                        {{#ifEquals state 2}}
                        <i class="fa fa-hourglass-half"></i>
                        {{/ifEquals}}
                        {{#ifEquals state 3}}
                        <i class="fa fa-flag-checkered"></i>
                        {{/ifEquals}}
                    </td>
                    <td>{{getScore competitor2.id scores}}</td>
                    <td>{{competitor2.name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/each}}
        {% endverbatim %}
    </script>
{% endblock %}