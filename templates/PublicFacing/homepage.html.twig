{% extends 'base.html.twig' %}

{% block title %}Rezultati - STEM Games{% endblock %}

{% block stylesheets %}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/sports.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.11/handlebars.min.js" integrity="sha256-+JMHsXRyeTsws/tzbIh5YHQxRdKCuNjmvNcTFtY6DLc=" crossorigin="anonymous"></script>
    <script src="/js/score-loader.js"></script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <img src="/images/stemgames-logo.png" class="logo">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h3>Filter Results</h3>
                <nav class="nav flex-column" id="filter-container">
                    <a class="nav-link" href="#" data-sport="all">Show All</a>
                    {% for sport in sports %}
                    <a class="nav-link" href="#" data-sport="{{ sport.name }}"><i class="{{ sport.icon }}"></i> {{ sport.name }}</a>
                    {% endfor %}
                </nav>
            </div>
            <div class="col-md-9" id="scores-container">
            </div>
        </div>
    </div>

    <script id="placements-template" type="text/x-handlebars-template">
        {% verbatim %}
        <h3><i class="{{ icon }}"></i> {{ name }}</h3>
        {{#each groups}}
        {{#each events}}
        <table class="table table-striped table-bordered table-dark text-center">
            <thead class="thead-light">
            <tr>
                <th colspan="4">{{../name}} {{ name }}</th>
            </tr>
            </thead>
            <tbody>
            {{#each scores}}
            <tr>
                <th>{{inc @index}}</th>
                <td>{{ team_name }}</td>
                <td>{{ college.name }}</td>
                <td>{{ score }}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        {{/each}}
        {{/each}}
        {% endverbatim %}
    </script>

    <script id="versus-template" type="text/x-handlebars-template">
        {% verbatim %}
                <h3><i class="{{ icon }}"></i> {{ name }}</h3>
        {{#each groups}}
        <table class="table table-striped table-bordered table-dark text-center">
            <thead class="thead-light">
                <tr>
                    <th colspan="5">{{ name }}</th>
                </tr>
            </thead>
            <tbody>
                {{#each events}}
                <tr>
                    <td>{{competitor1.name}}</td>
                    <td>{{getScore competitor1.id scores}}</td>
                    <td>
                        {{#ifEquals state 2}}
                        <i class="fa fa-hourglass-half"></i>
                        {{/ifEquals}}
                        {{#ifEquals state 3}}
                        <i class="fa fa-flag-checkered"></i>
                        {{/ifEquals}}
                    </td>
                    <td>{{getScore competitor2.id scores}}</td>
                    <td>{{competitor2.name}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{/each}}
        {% endverbatim %}
    </script>
{% endblock %}